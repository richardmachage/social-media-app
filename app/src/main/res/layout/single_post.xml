<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.Social"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:cardElevation="14dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="3dp"
    app:cardCornerRadius="4dp">

    <TextView
        android:id="@+id/userIdentity_textView"
        style="@style/Theme.Social"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:padding="5dp"
        android:text="\@UserName"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/postContent_textView"
        style="@style/Theme.Social"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="This is just a sample text to see how this ui for the recycler view works."
        android:textSize="20sp"
        />


</androidx.cardview.widget.CardView>